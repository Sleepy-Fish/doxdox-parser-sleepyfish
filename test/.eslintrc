{
  "env": {
    "es6": true,
    "mocha": true
  },
  "extends": [
    "standard",
    "plugin:mocha/recommended"
  ],
  "plugins": [
    "mocha"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "semi": [1, "always"],
    "standard/no-callback-literal": "off"
  }
}
